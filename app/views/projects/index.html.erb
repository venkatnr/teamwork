<div id="page-wrapper">
    <div class="row">
      <section id="tables">
        <div class="page-header">
          <h1>Projects</h1>
        </div>
        
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Members</th>
              <th>Is Active</th>
              <th>Total Hours</th>
              <th>Spent Hours</th>
              <% if current_user.is_admin? %>
                <th></th>
                <th></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.id %></td>
                <td><%= link_to project.name, project %></td>
                <td><%= project.description %></td>
                <td><%= project.users.count %></td>
                <td><%= project.status ? "Active" : "Cloased" %></td>
                <td><%= project.total_hours %></td>
                <td><%#= project.spent_hours %></td>
                <% if current_user.is_admin? %>
                  <td><%= link_to 'Edit', edit_project_path(project) %></td>
                  <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
</div>