<link rel='stylesheet' type='text/css' href='/assets/reset.css' />
<link rel='stylesheet' type='text/css' href='/assets/jquery-ui-1.8rc3.custom.css' />
<link rel='stylesheet' type='text/css' href='/assets/jquery.weekcalendar.css' />
<link rel='stylesheet' type='text/css' href='/assets/demo.css' />

<div id="page-wrapper">
    <div class="row">
			<div id='calendar'></div>
			<div id="event_edit_container">
				<form>
					<input name="authenticity_token" type="hidden" value=<%= csrf_meta_tag %>>
					
					<ul>
						<li>
							<span>Date: </span><span class="date_holder"></span> 
						</li>
						<li>
							<label for="start">Start Time: </label><select name="start"><option value="">Select Start Time</option></select>
						</li>
						<li>
							<label for="end">End Time: </label><select name="end"><option value="">Select End Time</option></select>
						</li>
						<li>
							<label for="title">Title: </label><input type="text" name="title" />
						</li>
						<li>
							<label for="body">Body: </label><textarea name="body"></textarea>
						</li>
					</ul>
				</form>
			</div>
    </div>
</div>

<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'></script>

<script type='text/javascript' src='/assets/jquery-ui-1.8rc3.custom.min.js'></script>
<script type='text/javascript' src='/assets/jquery.weekcalendar.js'></script>
<script type='text/javascript' src='/assets/demo.js'></script>
